{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/socket-server.js",
      "use": "@vercel/node" 
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { "distDir": ".next" } 
    }
  ],
  "routes": [
    {
      "src": "/socket.io/.*",
      "dest": "backend/socket-server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
} 